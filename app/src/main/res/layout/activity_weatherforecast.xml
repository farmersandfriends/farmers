<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EC0E4"
    android:padding = "20dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:textSize="30dp"
            android:textColor="#FFFFFF"
            app:font="custom2"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/updated_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_field"
            app:font="custom2"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />


    </LinearLayout>







    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/weather_icon"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="100sp"

            android:layout_below="@+id/humidity_field"
            android:layout_toStartOf="@+id/current_temperature_field"
            android:layout_gravity="top"
            android:layout_weight="0.92" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/humidity_field"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            app:font="custom2"
            android:paddingLeft="30dp"
            android:textColor="#FFFFFF"

            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/current_temperature_field"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"


            app:font="custom2"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:layout_above="@+id/linearlay"
            android:layout_toStartOf="@+id/updated_field"
            android:layout_marginEnd="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/details_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:font="custom2"
            android:textSize="30dp"

            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pressure_field"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:font="custom2"
            android:textSize="30dp"
            android:textColor="#FFFFFF"

            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlay"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="130dp">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 예보"
            android:textSize="20dp"
            app:font="custom2"
            android:background="@drawable/buttonbackground_term"
            android:id="@+id/btn_back"
            android:layout_weight="0.47" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="내일의 예보"
            android:textSize="20dp"
            app:font="custom2"
            android:id="@+id/btn_intent"
            android:layout_alignTop="@+id/btn_back"
            android:background="@drawable/buttonbackground_term"
            android:layout_weight="0.50" />
    </LinearLayout>

</LinearLayout>
