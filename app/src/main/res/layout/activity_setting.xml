<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/pay_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:background="@drawable/buttonbackground_close"
               android:textColor="#ffffff"
                android:text="이용권 구매"
                android:layout_marginTop="5dp"
                app:font = "custom2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp" />

            <Button
                android:id="@+id/logout_setting"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbackground_close"

                android:text="Logout"
                app:font = "custom1"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:layout_marginEnd="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img_setting"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/korea" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/upload_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonbackground2"
                android:autoText="false"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/camera"

                android:textColor= "#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/name_setting"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize = "20dp"
            android:ems="10"
            app:font = "custom1"

            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:hint="이름" />

        <EditText
            android:id="@+id/phone_setting"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize = "20dp"
            android:ems="10"
            app:font = "custom1"
            android:inputType="phone"
            android:layout_marginTop="5dp"
            android:hint="전화번호" />

        <EditText
            android:id="@+id/exp_setting"
            android:layout_width="300dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:textSize = "20dp"
            android:ems="10"
            app:font = "custom1"
            android:inputType="number"
            android:hint="경력(년)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/nation_setting"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:textSize = "20dp"
                android:layout_weight="1"
                android:ems="10"
                app:font = "custom1"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:hint="지역(시/도)" />

            <EditText
                android:id="@+id/subNation_setting"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:textSize = "20dp"
                app:font = "custom1"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="지역(시/군/구)" />
        </LinearLayout>

        <EditText
            android:id="@+id/grow_setting"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize = "20dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            app:font = "custom1"
            android:hint="재배작물" />

        <EditText
            android:id="@+id/intro_setting"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize = "20dp"
            android:layout_gravity="center"
            android:ems="10"
            app:font = "custom1"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine"
            android:hint="자기소개" />

        <Button
            android:id="@+id/revise_setting"
            android:textColor="#FFFFFF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="수정완료"
            app:font = "custom1"
            android:textStyle = "bold"
            android:background="@drawable/buttonbackground_close"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView >
