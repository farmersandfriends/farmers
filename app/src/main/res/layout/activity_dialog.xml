<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background"
    tools:context=".loginandregistration.activity.DialogActivity">

    <ImageView
        android:id="@+id/image_dial"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/korea" />

    <TextView
        android:id="@+id/name_dial"
        app:font = "custom2"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/image_dial"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"


        android:layout_toEndOf="@+id/image_dial"
        android:text="Name"
        android:textColor = "#000000"/>

    <TextView
        android:id="@+id/exp_dial"
        android:paddingLeft="5dp"
        android:layout_width="130dp"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_background"
        app:font = "custom2"
        android:layout_height="30dp"
        android:layout_below="@+id/name_dial"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:textColor = "#000000"
        android:layout_toEndOf="@+id/image_dial"
        android:text="Exp" />

    <TextView
        android:id="@+id/grow_dial"
        android:paddingLeft="5dp"
        android:layout_width="130dp"
        app:font = "custom2"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_background"
        android:layout_height="30dp"
        android:layout_below="@+id/exp_dial"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor = "#000000"
        android:layout_toEndOf="@+id/image_dial"
        android:text="Grow" />

    <TextView
        android:id="@+id/nation_dial"
        android:layout_width="130dp"
        android:background="@drawable/dialog_background"
        android:gravity="center_vertical"
        android:layout_height="30dp"
        android:layout_below="@+id/grow_dial"
        android:paddingLeft="5dp"
        app:font = "custom2"
        android:layout_marginLeft="10dp"
        android:textColor = "#000000"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_dial"
        android:text="Nation" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/close_dial"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="닫기"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonbackground_close"
        app:font = "custom2"
        android:layout_below="@+id/phone_dial"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/intro_dial" />

    <Button
        android:id="@+id/phone_dial"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonbackground_close"
        android:layout_width="130dp"
        android:layout_height="30dp"
        app:font = "custom2"
        android:text="전화"
        android:layout_below="@+id/intro_dial"
        android:layout_alignStart="@+id/intro_dial" />
    <Button
        android:id="@+id/eval"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonbackground_close"
        android:layout_width="130dp"
        android:layout_height="30dp"
        app:font = "custom2"
        android:text="평가"
        android:layout_below="@+id/intro_dial"
        android:layout_alignEnd="@+id/intro_dial" />

    <TextView
        android:id="@+id/intro_dial"
        android:background="@drawable/dialog_background"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:padding="10dp"
        app:font = "custom2"
        android:text="Introduce"
        android:layout_below="@+id/image_dial"
        android:layout_alignStart="@+id/image_dial" />


</RelativeLayout>
