<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:paddingBottom="15dp"

        android:weightSum="1">
        <Button
            android:id="@+id/real_estate"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/tactics"

            app:font="custom2"
            android:text = "부동산"
            android:textStyle="bold"
            android:textSize="30dp"
            android:drawablePadding="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonbackground2"


            android:layout_weight="9.30"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />
        <Button
            android:paddingTop="20dp"

            android:id="@+id/like"
            android:background="@drawable/buttonbackground2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:drawableTop="@drawable/tag"

            app:font="custom2"
            android:text = "용어"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        >
        <Button
            android:layout_marginRight="5dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/bookshelf"
            android:scaleType="fitCenter"
            android:id="@+id/technique"
            android:background="@drawable/buttonbackground2"
            android:layout_width="140dp"
            android:layout_height="140dp"

            app:font="custom2"
            android:text = "기술정보"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />
        <Button
            android:paddingTop="20dp"
            android:drawableTop="@drawable/clock"
            android:background="@drawable/buttonbackground2"
            android:layout_width="140dp"
            android:layout_height="140dp"

            android:textStyle="bold"
            android:id="@+id/weather"
            app:font="custom2"
            android:text = "작업일정"

            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        >
        <Button
            android:paddingTop="20dp"
            android:drawableTop = "@drawable/eye"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonbackground2"
            android:layout_width="140dp"
            android:layout_height="140dp"


            android:id="@+id/turn"
            app:font="custom2"
            android:text = "동영상"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:allowUndo="true" />
        <Button
            android:paddingTop="20dp"
            android:drawableTop="@drawable/www"
            android:background="@drawable/buttonbackground2"

            android:layout_width="135dp"
            android:layout_height="135dp"

            android:id="@+id/theothers"
            app:font="custom2"
            android:text = "빈집"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>

