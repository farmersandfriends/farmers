<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leegunmin.agoto.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:weightSum="1">
                <Button
                    android:id="@+id/myUnit"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:paddingTop="20dp"
                    app:font="custom2"


                    android:drawablePadding="2dp"



                    android:layout_marginRight="5dp"
                    android:background="@drawable/background"

                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_weight="9.30"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical" />
                <Button
                    android:paddingTop="20dp"

                    android:id="@+id/like"
                    android:background="@drawable/buttonbackground7"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:drawableTop="@drawable/pin"
                    app:font="custom2"
                    android:text = "추천"


                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        >
        <Button
            android:layout_marginRight="5dp"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/bookmark"
            android:scaleType="fitCenter"
            android:id="@+id/information"
            android:background="@drawable/buttonbackground2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text = "주요정보"
            app:font="custom2"

            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />
        <Button
            android:paddingTop="20dp"
            android:drawableTop="@drawable/umbrella"
            android:background="@drawable/buttonbackground1"
            android:layout_width="140dp"
            android:layout_height="140dp"

            app:font="custom2"
            android:text = "기상"
            android:textStyle="bold"
            android:id="@+id/weather"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="horizontal"
    >
    <Button
        android:paddingTop="20dp"
        android:drawableTop = "@drawable/chalkboard"
        android:layout_marginRight="5dp"
        android:background="@drawable/buttonbackground4"
        android:layout_width="140dp"
        android:layout_height="140dp"

        app:font="custom2"
        android:text = "중개"
        android:id="@+id/turn"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:allowUndo="true" />
    <Button
        android:paddingTop="20dp"
        android:drawableTop="@drawable/paper_plane"
        android:background="@drawable/buttonbackground5"
        android:layout_width="135dp"
        android:layout_height="135dp"

        android:id="@+id/theothers"
        android:textStyle="bold"
        app:font="custom2"
        android:text = "볼거리"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:allowUndo="true" />

</LinearLayout>

</LinearLayout>
